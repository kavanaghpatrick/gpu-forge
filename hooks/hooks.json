{
  "hooks": [
    {
      "event": "SessionStart",
      "hooks": [{
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/context-loader.sh"
      }]
    },
    {
      "event": "PostToolUse",
      "hooks": [{
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/post-edit-validator.sh",
        "matcher": "Edit",
        "timeout": 10
      }]
    }
  ]
}
